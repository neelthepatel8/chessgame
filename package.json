{
    "name": "game",
    "version": "1.0.0",
    "description": "Chess Game",
    "main": "index.js",
    "scripts": {
        "remove-resources": "node predeploy.js",
        "build": "docker-compose up -d",
        "tag-backend": "docker tag game-backend:latest 541032831567.dkr.ecr.us-east-1.amazonaws.com/chessgame:latest-backend",
        "tag-frontend": "docker tag game-frontend:latest 541032831567.dkr.ecr.us-east-1.amazonaws.com/chessgame:latest-frontend",
        "push-backend": "docker push 541032831567.dkr.ecr.us-east-1.amazonaws.com/chessgame:latest-backend",
        "push-frontend": "docker push 541032831567.dkr.ecr.us-east-1.amazonaws.com/chessgame:latest-frontend",
        "predeploy": "yarn remove-resources",
        "deploy": "yarn predeploy && yarn build && yarn tag-backend && yarn tag-frontend && yarn push-backend && yarn push-frontend && echo 'Deployment Complete!'",
        "start": "concurrently \"cd frontend && npm run dev\" \"cd backend && python3 -m uvicorn main:app --reload --host 0.0.0.0 --port 8000\""
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/neelthepatel8/chessgame.git"
    },
    "keywords": [
        "chess",
        "game"
    ],
    "author": "Neel Patel",
    "license": "ISC",
    "bugs": {
        "url": "https://github.com/neelthepatel8/chessgame/issues"
    },
    "homepage": "https://github.com/neelthepatel8/chessgame#readme",
    "devDependencies": {
        "concurrently": "^8.2.2"
    }
}
