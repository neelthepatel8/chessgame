name: Deploy to AWS

on:
  push:
    branches:
      - main
jobs:
  build-and-push:
    name: Build and Push
    runs-on: ubuntu-latest

    steps:
      - name: Checkout code
        uses: actions/checkout@v2

      - name: Set up Docker Buildx
        uses: docker/setup-buildx-action@v1

      - name: Log in to Amazon ECR
        id: login-ecr
        uses: aws-actions/amazon-ecr-login@v1
        with:
          aws-access-key-id: ${{ secrets.AWS_ACCESS_KEY_ID }}
          aws-secret-access-key: ${{ secrets.AWS_SECRET_ACCESS_KEY }}
          aws-region: us-east-2

      - name: Remove Previous Resources
        run: node predeploy.js

      - name: Build and start containers
        run: docker-compose up -d

      - name: Tag backend image
        run: docker tag game-backend:latest ${{ secrets.AWS_ECR_URI }}/chessgame:latest-backend

      - name: Tag frontend image
        run: docker tag game-frontend:latest ${{ secrets.AWS_ECR_URI }}/chessgame:latest-frontend

      - name: Push backend image to Amazon ECR
        run: docker push ${{ secrets.AWS_ECR_URI }}/chessgame:latest-backend

      - name: Push frontend image to Amazon ECR
        run: docker push ${{ secrets.AWS_ECR_URI }}/chessgame:latest-frontend

      - name: Deployment complete
        run: echo 'Deployment Complete!'
